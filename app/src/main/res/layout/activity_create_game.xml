<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityCreateGame">

    <TextView
        android:id="@+id/choose_lobby_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_lobby_type"
        tools:layout_editor_absoluteX="48dp"
        tools:layout_editor_absoluteY="25dp" />

    <RadioGroup
        android:id="@+id/choose_lobby_type_pole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/choose_lobby_type"
        tools:layout_editor_absoluteX="60dp">

        <RadioButton
            android:id="@+id/public_room_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/private_lobby_type" />

        <RadioButton
            android:id="@+id/private_room_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/public_lobby_type" />
    </RadioGroup>

    <TextView
        android:id="@+id/enter_number_of_players_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_number_of_players"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="123dp" />

    <EditText
        android:id="@+id/enter_lobby_name_pole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="213dp" />

    <TextView
        android:id="@+id/enter_password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_password"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="270dp" />

    <EditText
        android:id="@+id/enter_password_pole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="289dp" />

    <TextView
        android:id="@+id/enter_lobby_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_lobby_name"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="194dp" />

    <EditText
        android:id="@+id/enter_number_of_players_pole"
        android:layout_width="142dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="142dp" />

    <TextView
        android:id="@+id/wrong_number_of_players_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        tools:layout_editor_absoluteX="257dp"
        tools:layout_editor_absoluteY="162dp" />

    <Button
        android:id="@+id/go_back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_back"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="343dp" />

    <Button
        android:id="@+id/create_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/create_game"
        tools:layout_editor_absoluteX="439dp"
        tools:layout_editor_absoluteY="343dp" />

</androidx.constraintlayout.widget.ConstraintLayout>