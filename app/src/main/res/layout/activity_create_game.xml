<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityCreateGame">

    <TextView
        android:id="@+id/choose_room_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_room_type"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/choose_number_of_players_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_number_of_players"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="152dp" />

    <EditText
        android:id="@+id/edit_number_of_players"
        android:layout_width="142dp"
        android:layout_height="39dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="171dp" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checkedButton="@id/public_room_type"
        app:layout_constraintTop_toBottomOf="@+id/choose_room_type"
        tools:layout_editor_absoluteX="66dp">

        <RadioButton
            android:id="@+id/public_room_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/private_room_type" />

        <RadioButton
            android:id="@+id/private_room_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/public_room_type" />
    </RadioGroup>

    <TextView
        android:id="@+id/enter_room_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_room_name"
        tools:layout_editor_absoluteX="54dp"
        tools:layout_editor_absoluteY="223dp" />

</androidx.constraintlayout.widget.ConstraintLayout>